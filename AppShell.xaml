<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="cadflash.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:cadflash"
    xmlns:views="clr-namespace:cadflash.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate views:HomeView}" Route="home"/>
    <ShellContent ContentTemplate="{DataTemplate views:DifficultyView}" Route="difficulty"/>
    <ShellContent ContentTemplate="{DataTemplate views:CRUDView}" Route="crud"/>
    <ShellContent ContentTemplate="{DataTemplate views:StudyBasicsView}" Route="studybasics"/>
    <ShellContent ContentTemplate="{DataTemplate views:StudyIntermediateView}" Route="studyintermediate"/>
    <ShellContent ContentTemplate="{DataTemplate views:StudyAdvancedView}" Route="studyadvanced"/>

</Shell>
